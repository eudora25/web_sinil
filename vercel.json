{
  "buildCommand": "cd vue-project && npm ci && npm run build",
  "outputDirectory": "vue-project/dist",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "functions": {
    "vue-project/dist/**/*.js": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_VERSION": "18"
    }
  }
}
